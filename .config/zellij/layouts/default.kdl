layout {
    default_tab_template {
        pane size=1 borderless=true {
            plugin location="zjstatus"
        }

        children
    }

    tab name="Main" split_direction="vertical" {
       pane focus=true
    }

    tab name="Dotfiles & Notes" {
        pane split_direction="horizontal" stacked=true {
            pane {
                start_suspended true
                name "Dotfiles"
                cwd "~/dotfiles/"
                command "nvim"
            }

            pane {
                start_suspended true
                name "Obsidian"
                cwd "~/Obsidian/TNYPXL"
                command "nvim"
            }

            pane {

            }
        }
    }
}
