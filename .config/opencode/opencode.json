{
  "$schema": "https://opencode.ai/config.json",
  "disabled_providers": [
    "openai"
  ],
  "theme": "kanagawa",
  "mode": {
    "plan": {
      "model": "google/gemini-2.5-pro",
      "tools": {
        "write": false,
        "edit": false,
        "bash": false
      }
    },
    "build": {
      "model": "anthropic/claude-4-sonnet",
      "tools": {
        "write": true,
        "edit": true,
        "bash": true
      }
    },
    "discuss": {
      "prompt": "{file:./discuss_mode_prompt.txt}",
      "model": "google/gemini-2.5-pro",
      "tools": {
        "write": false,
        "edit": false,
        "bash": false
      }
    },
    "homelab": {
      "prompt": "{file:./homelab_mode_prompt.txt}",
      "model": "anthropic/claude-4-sonnet",
      "tools": {
        "write": false,
        "edit": true,
        "bash": true
      }
    }
  },
  "mcp": {
    "context7": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@upstash/context7-mcp"
      ],
      "enabled": true
    }
  }
}
