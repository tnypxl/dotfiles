{
  "$schema": "https://opencode.ai/config.json",
  "theme": "kanagawa",
  "mcp": {
    "context7": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@upstash/context7-mcp"
      ],
      "enabled": true
    },
    "serena": {
      "type": "local",
      "command": [
        "serena",
        "start-mcp-server",
        "--context", "ide-assistant"
      ],
      "enabled": true
    }
  }
}
