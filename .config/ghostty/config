# Theme
theme = nightfox

# Font
font-family = JetBrainsMono Nerd Font
font-size = 13
font-style = medium
font-thicken = false
font-feature = +liga +calt +dlig -liga-c0 -calt-c0

# Cursor
# cursor-style = bar
cursor-click-to-move = true
adjust-cursor-thickness = 1

# Cell
adjust-cell-height = 20%

# Window
window-decoration = none
window-padding-x = 8
window-padding-y = 8,1
window-padding-balance = true
window-save-state = always
unfocused-split-opacity = 0.6
scrollback-limit = 100000

# macOS
macos-titlebar-style = hidden
macos-secure-input-indication = true

# Shell
shell-integration = zsh
shell-integration-features = cursor,sudo,title

# Clipboard
copy-on-select = false
selection-clear-on-copy = true
clipboard-trim-trailing-spaces = true
clipboard-paste-protection = true

# Mouse
# mouse-scroll-multiplier = 1

# Keybinds
keybind = cmd+backspace=text:\x15
keybind = shift+enter=text:\n
keybind = ctrl+cmd+up=resize_split:up,30
keybind = ctrl+cmd+shift+up=resize_split:up,120
keybind = ctrl+cmd+down=resize_split:down,30
keybind = ctrl+cmd+shift+down=resize_split:down,120
keybind = ctrl+cmd+left=resize_split:left,30
keybind = ctrl+cmd+shift+left=resize_split:left,120
keybind = ctrl+cmd+right=resize_split:right,30
keybind = ctrl+cmd+shift+right=resize_split:right,120
keybind = ctrl+cmd+e=equalize_splits
